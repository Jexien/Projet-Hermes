{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "CI report artifact",
  "type": "object",
  "required": ["id","agentId","type","name","success","timestamp"],
  "properties": {
    "id": { "type": "string" },
    "agentId": { "type": "string" },
    "type": { "const": "ci-report" },
    "name": { "type": "string" },
    "success": { "type": "boolean" },
    "details": { "type": "object" },
    "timestamp": { "type": "string", "format": "date-time" }
  },
  "additionalProperties": true
}
